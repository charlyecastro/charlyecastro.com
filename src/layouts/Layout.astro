---
const { title, description } = Astro.props;
import Nav from "../components/Nav";
import { Instagram, Github, Linkedin, Mail } from "lucide-react";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta title={title} />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="author" content="Charlye Castro" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://charlyecastro.com" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Charlye Castro</title>
  </head>
  <body class="container mx-auto! px-4!">
    <Nav client:load />
    <slot />
    <footer class="w-full flex justify-between py-2">
      <p class="text-sm font-medium leading-none text-muted-foreground">
        Â©2025 CHARLYE CASTRO
      </p>
      <p class="text-sm font-medium leading-none text-muted-foreground">
        Designed & Built By Charlye
      </p>
      <div class="flex gap-2">
        <a href="" class="text-muted-foreground">
          <Instagram size={16} />
        </a>
        <a
          href="https://github.com/charlyecastro"
          class="text-muted-foreground"
        >
          <Github size={16} />
        </a>
        <a
          href="https://www.linkedin.com/in/charlyecastro/"
          class="text-muted-foreground"
        >
          <Linkedin size={16} />
        </a>
        <a href="mailto:charlyecastro@gmail.com" class="text-muted-foreground">
          <Mail size={16} />
        </a>
      </div>
    </footer>
  </body>
</html>
