---
import Layout from "../layouts/Layout.astro";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
---

<Layout
  title="Charlye Castro | 404"
  description="Page not found"
  url="https://www.charlyecastro.com/404"
  shouldIndex={false}
>
  <div
    class="m-auto text-center flex flex-col gap-2 justify-center items-center"
  >
    <h1 class="font-extrabold tracking-tight text-9xl">404</h1>
    <h2 class="text-2xl font-medium tracking-tight">PAGE NOT FOUND</h2>
    <p>The page you are looking for doesn't seem to exist.</p>
    <a href="/" class={cn(buttonVariants({ variant: "outline" }), "w-fit")}>
      Go Back Home
    </a>
  </div>
</Layout>
