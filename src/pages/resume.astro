---
import ResumeExperience from "@/components/ResumeExperience.astro";
import ResumeSkills from "@/components/ResumeSkills.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/resume.css";
---

<Layout title="Charlye Castro | Resume" description="View My Full Resume">
  <div id="resume" class="max-w-[800px] mx-auto p-10 border rounded-md mb-4">
    <header class="text-center">
      <h1 class="text-3xl font-bold">Charlye Castro</h1>
      <p class="text-xl font-medium text-secondary-foreground">
        Software Engineer
      </p>
      <p class="text-sm text-gray-500">
        Seattle, WA | charlyecastro@gmail.com | linkedin.com/in/charlyecastro/ |
        charlyecastro.com
      </p>
    </header>

    <hr class="border-gray-200 my-3" />

    <section>
      <h2 class="text-xl font-semibold">Education</h2>
      <ResumeExperience
        company="University of Washington"
        location="Seattle, WA"
        position="Bachelor of Science in Informatics"
        date="Sept 2015 - June 2019"
        bullets={[]}
      />
    </section>

    <hr class="border-gray-200 my-3" />

    <section>
      <h2 class="text-xl font-semibold">Experience</h2>
      <div class="flex flex-col gap-2">
        <ResumeExperience
          company="GoodRx"
          location="Seattle, WA"
          position="Software Engineer III"
          date="Oct 2023 - Present"
          bullets={[
            "Developed and maintaine full-stack applications for cost savings on prescriptions",
            "Optimized performance and scalability of existing systems",
            "Optimized performance and scalability of existing systems",
          ]}
        />
        <ResumeExperience
          company="GoodRx"
          location="Seattle, WA"
          position="Software Engineer II"
          date="Apiril 2022 - Oct 2023"
          bullets={[
            "Developed and maintaine full-stack applications for cost savings on prescriptions",
            "Optimized performance and scalability of existing systems",
            "Optimized performance and scalability of existing systems",
          ]}
        />
        <ResumeExperience
          company="Microsoft"
          location="Redmond, WA"
          position="Software Engineer In Test - Contract"
          date="Oct 2020 - April 2022"
          bullets={[
            "Developed a multi-platform test framework that was utilized across multiple internal products",
            "Maintained and implemented software tests and pipelines that ensured 99% reliability every 24 hours",
            "Collaborated with multiple teams to build out testing plans and resolved important product test issues",
            "Onboard developers on to the framework by conducting meetings, demos and 1 on 1 collaboration sessions",
          ]}
        />
        <ResumeExperience
          company="Recon Dynamics"
          location="Seattle, WA"
          position="Mobile Developer - Contract"
          date="June 2020 - Oct 2020"
