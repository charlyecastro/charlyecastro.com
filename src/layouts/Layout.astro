---
const { title, description } = Astro.props;
import Nav from "../components/Nav";
import { Instagram, Github, Linkedin, Mail } from "lucide-react";
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta title={title} />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="author" content="Charlye Castro" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://charlyecastro.com" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Charlye Castro</title>
  </head>
  <body>
    <div class="container mx-auto! px-4!">
      <ClientRouter/>
      <Nav client:load />
      <slot />
    </div>
    <footer class="w-full p-4 bg-secondary">
      <div
        class="container mx-auto! px-4! flex flex-col-reverse sm:flex-row gap-4 justify-center items-center sm:justify-between"
      >
        <div class="flex flex-col gap-1">
          <p class="text-xs font-medium leading-none text-muted-foreground">
            Â©2025 CHARLYE CASTRO
          </p>
          <p class="text-xs block: sm:hidden leading-none text-muted-foreground">
            Designed & Built By Charlye
          </p>
        </div>
        <p class="text-xs leading-none hidden sm:block text-muted-foreground">
          Designed & Built By Charlye
        </p>
        <div class="flex gap-2">
          <a href="" class="text-muted-foreground">
            <Instagram size={16} />
          </a>
          <a
            href="https://github.com/charlyecastro"
            class="text-muted-foreground"
          >
            <Github size={16} />
          </a>
          <a
            href="https://www.linkedin.com/in/charlyecastro/"
            class="text-muted-foreground"
          >
            <Linkedin size={16} />
          </a>
          <a
            href="mailto:charlyecastro@gmail.com"
            class="text-muted-foreground"
          >
            <Mail size={16} />
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
